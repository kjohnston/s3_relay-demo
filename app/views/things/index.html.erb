<h1>All teh Things!</h1>

<div class="button-bar">
  <%= link_to "New Thing", new_thing_path, class: "button" %>
</div>

<table class="things-list">
  <tr>
    <th>Thing</th>
    <th></th>
  </tr>
  <% @things.each do |t| %>
    <tr>
      <td><%= t.name %></td>
      <td class="controls">
        <%= link_to "Show", thing_path(t) %>
        <%= link_to "Edit", edit_thing_path(t) %>
      </td>
    </tr>
  <% end %>
</table>
